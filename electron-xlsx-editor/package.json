{
    "name": "electron-xlsx-editor",
    "version": "1.0.0",
    "description": "Lightweight Electron desktop app for importing, editing, and exporting xlsx files",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "verify:agent": "node scripts/verify-agent-change.mjs"
    },
    "build": {
        "appId": "com.example.electron-xlsx-editor",
        "productName": "xlsx Editor",
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32",
                        "x64"
                    ]
                }
            ],
            "signAndEditExecutable": false,
            "sign": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "node_modules/**/*"
        ]
    },
    "dependencies": {
        "axios": "^1.6.0",
        "electron-store": "^8.1.0",
        "exceljs": "^4.4.0",
        "x-data-spreadsheet": "^1.1.9",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "electron": "^22.3.27",
        "electron-builder": "^24.13.3"
    }
}
